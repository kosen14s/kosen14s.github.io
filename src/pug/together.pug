    meta(name='viewport' content='width=device-width,initial-scale=1')
    link(rel="stylesheet", href="./styles/together/together.css")
    link(rel="icon" type="image/x-icon" href="./images/favicon.ico")
    title TOGETHER | kosen14s #dojin
